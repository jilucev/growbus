.form-container
  = form_for @guest do |f|
    %p.form-label
      = f.label :name
    %p.form-input
      = f.text_field :name
    %p.form-label
      = f.label :email
    %p.form-input
      = f.text_field :email
    %p.form-label
      = f.label :message
    %p.form-input
      = f.text_field :message
    %br
    #success
      = f.submit "send"